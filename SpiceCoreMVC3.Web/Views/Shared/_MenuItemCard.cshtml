@model IEnumerable<MenuItem>

@if (Model.Count() > 0)
{
    <div class="col-12">
        <div class="row">
            <h3 class="text-success">@Model.FirstOrDefault().CategoryId</h3>
        </div>

        @foreach(var item in Model)
        {
            <div class="menu-card border border-info rounded col-12">
                <div class="row">
                    <div class="col-lg-3 col-sm-12">
                        <img src="/images/@item.ImageURL" width="99%" alt="Menu Item Image" />
                    </div>
                    <div class="col-lg-9 col-sm-12">
                        <div class="row">
                            <div class="col-8">
                                <label class="text-primary menuitem-name">@item.Name</label>
                                @if (item.Spicyness == SpicyRating.Spicy)
                                {
                                    <img src="~/images/Mild.png" title="Mild" />
                                }
                                else @if (item.Spicyness == SpicyRating.VerySpicy)
                                {
                                    <img src="~/images/spicy.png" title="Spicy" />
                                }
                                else @if (item.Spicyness == SpicyRating.RedHot)
                                {
                                    <img src="~/images/verySpicy.png" title="Very Spicy" />
                                }
                            </div>
                            <div class="col-4 text-right">
                                <h4 class="text-maroon">@item.Price.ToString("C")</h4>
                            </div>
                        </div>
                        <div class="row col-12 text-justify">
                            <h6>Description</h6>
                            <p>
                                @Html.Raw(item.Description)
                            </p>
                        </div>
                        <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                            <a asp-action="Details" class="btn btn-success form-control" asp-route-id="@item.Id">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
