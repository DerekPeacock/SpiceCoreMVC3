@model SpiceCoreMVC3.Web.Models.ViewModels.SubCategoryViewModel

@{
    ViewData["Title"] = "Create";
}

<header class="jumbotron">
    <h1>Create Sub Category</h1>
</header>

<hr />
<div class="row">
    <div class="col-md-4">
        <h4>Add New Sub Categories</h4>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubCategory.Name" class="control-label"></label>
                <input asp-for="SubCategory.Name" class="form-control" />
                <span asp-validation-for="SubCategory.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubCategory.CategoryId" class="control-label"></label>
                <select asp-for="SubCategory.CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <partial name="_FormButtons" />
        </form>
    </div>
    <div class="col-md-8">
        <h4>Existing Sub Categories</h4>
        @if(Model.SubCategoryList.Count() == 0)
        {
            <p>
                No Sub Categories Exist
            </p>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

