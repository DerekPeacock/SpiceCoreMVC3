@model IEnumerable<SpiceCoreMVC3.Web.Models.SubCategory>

@{
    ViewData["Title"] = "Index";
}

<header class="jumbotron">
    <h1>Sub Categories List</h1>
</header>

<section class="background-white background-border">
    <div class="row">
        <div class="col-6">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category)
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category.Id)
                            </td>
                            <td>
                                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                  <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                  <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                                <partial name="_TableButtons" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-6">
            <p>
                <partial name="_AddButton" />
            </p>
        </div>
    </div>
</section>
            
