@model IEnumerable<SpiceCoreMVC3.Web.Models.MenuItem>

@{
    string entity = "Menu Item";
    ViewData["Title"] = entity + " List";
}

<header class="jumbotron">
    <section class="border background-white">
        <div class="row">
            <div class="col-6">
                <h1>Menu Item List</h1>
            </div>
            <div class="col-6">
                <partial name="_AddButton" model="@entity" />
            </div>
        </div>
    </section>
</header>



<table class="table table-striped border">
    <thead>
        <tr class="bg-info">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spicyness)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Spicyness)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubCategory.CategoryId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
